<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">

	<bean id="orwell" class="hu.javadev.bookstore.model.Author">
		<constructor-arg value="George Orwell" />
	</bean>

	<bean id="herriot" class="hu.javadev.bookstore.model.Author">
		<constructor-arg value="James Herriot" />
	</bean>

	<bean id="publisher" class="hu.javadev.bookstore.model.Publisher">
		<property name="name" value="Könyvfakasztó" />
		<property name="description" value="Részletes leírás" />
	</bean>

</beans>
