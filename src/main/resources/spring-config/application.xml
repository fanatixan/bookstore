<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:context="http://www.springframework.org/schema/context"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd
		http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context-4.3.xsd">

	<context:component-scan base-package="hu.javadev.bookstore" />

	<import resource="classpath:/spring-config/authors.xml" />
	<import resource="classpath:/spring-config/publishers.xml" />
	<import resource="classpath:/spring-config/books.xml" />

	<bean id="customEditorConfigurer"
		class="org.springframework.beans.factory.config.CustomEditorConfigurer">
		<property name="customEditors">
			<map>
				<entry key="hu.javadev.bookstore.model.Genre" value="hu.javadev.bookstore.editor.GenreEditor" />
			</map>
		</property>
	</bean>

</beans>
